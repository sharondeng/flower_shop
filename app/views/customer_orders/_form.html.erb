<%= semantic_form_for @customer_order, html: {multipart: true} do |f| %>
  <%= f.inputs do %>
    <%= f.semantic_fields_for :customer do |cust| %>
      <%= cust.input :name, required: false, label: 'Customer name'.html_safe, as: :shop_string %>
      <%= cust.input :address, required: false, label: 'Shipping address'.html_safe, as: :shop_string %>
    <% end %>
    <%= f.semantic_fields_for :product_orders do |product| %>
      <div class="shop-inline">
      <%= product.input :quantity, required: false, label: 'Quantity'.html_safe, as: :shop_string %>
      <%= product.input :product_code, required: false, label: 'Product code'.html_safe, as: :shop_string, input_html: { readonly:  true } %>
      </div>
    <% end %>
  <% end %>
  <br>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>