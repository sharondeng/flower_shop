<% if @products.present? %>
  <% @products.each do |product_row| %>
    <div class="row">
      <% product_row.each do |product| %>
      <div class="card" style="width: 18rem;">
        <!--  <img src="..." class="card-img-top" alt="...">-->
        <div class="card-header"><b><%= product.name %></b></div>
        <% pic = "#{product.code.upcase}.jpg" %>
        <%= image_tag pic %>
        <div class="card-body">
          <% product.package_bundles.each do |bundle| %>
            <p class="card-text"><%= bundle.num_of_item %>&nbsp;@&nbsp;<%= number_to_currency(bundle.cost_amount) %></p>
             <% end %>
        </div>
        <div class="card-footer">Code: <%=product.code %></div>
      </div>
      <% end %>
    </div>
  <% end %>
  <br>
  <%= link_to 'Create Customer Order', new_customer_order_path, class: "btn btn-primary" %>
<% end %>